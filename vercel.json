{
  "buildCommand": "cd api && npm install && cd .. && npm run build",
  "installCommand": "npm install",
  "outputDirectory": "dist",
  "functions": {
    "api/**/*.{ts,js}": {
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}